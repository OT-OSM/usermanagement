Cmnd_Alias      POWER = /sbin/shutdown, /sbin/halt, /sbin/reboot, /sbin/restart, /bin/kill
Cmnd_Alias      RULES = /usr/sbin/, /sbin/ifconfig
Cmnd_Alias      SWITCH_USER = /bin/su - targetuser

%dev  ALL = NOPASSWD: RULES

%devops ALL= NOPASSWD: POWER

%devlead  ALL = NOPASSWD: /usr/bin/

%devopslead ALL=(ALL) NOPASSWD:ALL

%switchers ALL = NOPASSWD: SWITCH_USER
